{
  "name": "root",
  "version": "0.0.2",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@open-wc/building-rollup": "^2.2.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@web/rollup-plugin-html": "^2.0.0",
    "@web/rollup-plugin-import-meta-assets": "^2.0.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "lerna": "^7.1.5",
    "lint-staged": "^14.0.0",
    "lit": ">=2.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "rollup": "^2.78.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "start": "run-p build:watch leavittbook",
    "build:watch": "tsc --build --preserveWatchOutput -w",
    "build": "tsc --build --preserveWatchOutput",
    "lint": "lerna run lint --stream",
    "nuke": "git clean -fdx && rm -f package-lock.json",
    "leavittbook": "cd packages/leavittbook && npm start",
    "lint:leavittbook": "cd packages/leavittbook && npm run lint",
    "build:leavittbook": "npm run build && cd packages/leavittbook && npm run build",
    "start:build-leavittbook": "web-dev-server --root-dir dist --app-index index.html --open --compatibility none --port 9090",
    "lerna:publish": "npm run build && lerna publish --conventional-commits --yes",
    "lerna:publish-force": "npm run build && lerna publish --conventional-commits --yes --force-publish=*",
    "test:publish": "npm run build && lerna version --no-push --yes"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "tslib": "^2.6.1"
  },
  "customElements": "custom-elements.json"
}
