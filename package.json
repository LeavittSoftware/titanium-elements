{
  "name": "root",
  "version": "0.0.2",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/config-lerna-scopes": "^17.0.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lerna": "^5.0.0",
    "lint-staged": "^12.4.2",
    "lit": ">=2.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2",
    "@open-wc/building-rollup": "^2.0.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@web/rollup-plugin-html": "^1.10.3",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "rollup": "^2.74.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0"
  },
  "scripts": {
    "start": "npm run bootstrap && run-p build:watch leavittbook",
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap --ci --hoist",
    "build:watch": "tsc --build --preserveWatchOutput -w",
    "build": "tsc --build --preserveWatchOutput",
    "lint": "lerna run lint --stream",
    "nuke": "rm -rf node_modules && rm -rf packages/leavittbook/node_modules && rm -f packages/leavittbook/package-lock.json&& rm -f package-lock.json && npm i",
    "leavittbook": "cd packages/leavittbook && npm start",
    "lint:leavittbook": "cd packages/leavittbook && npm run lint",
    "build:leavittbook": "npm run bootstrap && npm run build && cd packages/leavittbook && npm run build",
    "start:build-leavittbook": "web-dev-server --root-dir dist --app-index index.html --open --compatibility none --port 9090",
    "lerna:publish": "npm run bootstrap && npm run build && lerna publish --conventional-commits --yes",
    "test:publish": "npm run bootstrap && npm run build && lerna version --no-push --yes"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "customElements": "custom-elements.json"
}
