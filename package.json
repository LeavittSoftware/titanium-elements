{
  "name": "root",
  "version": "0.0.2",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "lerna": "^7.4.1",
    "lit": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "start": "run-p build:watch leavittbook",
    "build:watch": "tsc --build --preserveWatchOutput -w",
    "build": "npm run build:tsc || npm run build:tsc || exit 0",
    "build:tsc": "tsc --build --preserveWatchOutput",
    "lint": "lerna run lint --stream",
    "nuke": "git clean -fdx && rm -f package-lock.json",
    "leavittbook": "cd leavittbook && npm start",
    "lint:leavittbook": "cd leavittbook && npm run lint",
    "build:leavittbook": "npm run build && cd leavittbook && npm run build",
    "start:build-leavittbook": "web-dev-server --root-dir dist --app-index index.html --open --compatibility none --port 9090",
    "lerna:publish": "npm run build && lerna publish --conventional-commits --yes",
    "lerna:publish-force": "npm run build && lerna publish --conventional-commits --yes --force-publish=*",
    "test:publish": "npm run build && lerna version --no-push --yes"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "tslib": "^2.6.2",
    "dayjs": "^1.11.10",
    "bowser": "^2.11.0"
  },
  "customElements": "custom-elements.json"
}
