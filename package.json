{
  "name": "root",
  "version": "0.0.2",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.7",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lit-element": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "storybook": "^1.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "web-component-analyzer": "^0.1.20"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "npm run bootstrap && npm run build && run-p storybook build:watch",
    "bootstrap": "lerna bootstrap --ci --hoist",
    "build:watch": "lerna run build:watch --stream --parallel",
    "build": "tsc --build --preserveWatchOutput",
    "lint": "lerna run lint --stream",
    "storybook": "cd packages/storybook && npm run start",
    "build:storybook": "npm run bootstrap && npm run build && lerna run site:build",
    "lerna:publish": "npm run bootstrap && npm run build && lerna run gen-docs && lerna publish --conventional-commits --yes"
  }
}
