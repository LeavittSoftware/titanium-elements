{
  "name": "root",
  "version": "0.0.2",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/config-lerna-scopes": "^16.2.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.0",
    "lit": ">=2.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "start": "npm run bootstrap && run-p build:watch leavittbook",
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap --ci --hoist",
    "build:watch": "tsc --build --preserveWatchOutput -w",
    "build": "tsc --build --preserveWatchOutput",
    "lint": "lerna run lint --stream",
    "leavittbook": "cd packages/leavittbook && npm start",
    "gen-docs": "wca analyze \"packages/**/src/*.ts\" --format json --outFile custom-elements.json",
    "storybook": "cd packages/storybook && npm run start",
    "build:storybook": "npm run bootstrap && npm run build && lerna run site:build",
    "lerna:publish": "npm run bootstrap && npm run build && lerna publish --conventional-commits --yes",
    "test:publish": "npm run bootstrap && npm run build && lerna version --no-push --yes"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "customElements": "custom-elements.json"
}
