{
  "compilerOptions": {
    "target": "es2017",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "allowJs": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "references": [
    {
      "path": "./packages/titanium-snackbar/tsconfig.json"
    },
    {
      "path": "./packages/titanium-sw-notifier/tsconfig.json"
    }
  ]
}
