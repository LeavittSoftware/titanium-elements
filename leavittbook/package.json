{
  "license": "BSD-3-Clause",
  "name": "@leavittsoftware/leavittbook",
  "type": "module",
  "version": "11.0.2",
  "dependencies": {
    "@webcomponents/webcomponentsjs": "*",
    "api-viewer-element": "1.0.0-pre.8",
    "countup.js": "^2.8.0",
    "dayjs": "*",
    "lit": "^3.0.0",
    "page": "^1.11.6",
    "playground-elements": "^0.18.1",
    "@material/web": "^*"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@open-wc/eslint-config": "^12.0.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/page": "^1.11.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@web/dev-server": "^0.3.6",
    "@web/rollup-plugin-html": "^2.0.1",
    "@web/rollup-plugin-import-meta-assets": "^2.1.0",
    "concurrently": "^8.2.2",
    "deepmerge": "^4.3.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "replace": "^1.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.29.4",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-workbox": "^8.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "rollup-plugin-summary": "^2.0.0",
    "@rollup/plugin-terser": "^0.4.4"
  },
  "scripts": {
    "start": "concurrently --kill-others --names tsc,wds,docs  \"npm run tsc:watch\" \"web-dev-server\"",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open --compatibility none --port 9090",
    "tsc:watch": "tsc --watch",
    "build": "rimraf dist && tsc && npm run docs && rollup -c rollup.config.js",
    "lint:eslint": "eslint --ext .ts  . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .ts . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "clean:dev": "rimraf \"src/**/*.js.map\" \"src/**/*.js\"",
    "clean:modules": "rimraf \"./**/node_modules/!(rimraf|.bin)\" \"./package-lock.json\"",
    "clean:all": "npm run clean:dev && npm run clean:modules",
    "docs": "cem analyze --globs \"../packages/**/src/*.ts\" --exclude \"../packages/**/node_modules/@leavittsoftware/**/src/*.ts\" --litelement",
    "docs:watch": "cem analyze --watch --globs \"../packages/**/src/*.ts\" --exclude \"../packages/**/node_modules/@leavittsoftware/**/src/*.ts\" --litelement"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "no-new": "warn",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-var": "error",
      "curly": "error",
      "no-floating-decimal": "error",
      "arrow-body-style": [
        "error",
        "as-needed",
        {
          "requireReturnForObjectLiteral": false
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "printWidth": 160
  }
}
